<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webbdong.springboot.mybatis.mapper.OrderMapper">

    <select id="selectLikeOrderNo2" resultType="com.webbdong.springboot.mybatis.entity.Order">
        SELECT *
        FROM t_order
        WHERE order_no LIKE concat(concat('%', #{orderNo}),'%')
    </select>

    <select id="selectLikeOrderNo3" resultType="com.webbdong.springboot.mybatis.entity.Order">
        <bind name="fuzzy" value="'%' + orderNo + '%'" />
        SELECT *
        FROM t_order
        WHERE order_no LIKE #{fuzzy}
    </select>

</mapper>